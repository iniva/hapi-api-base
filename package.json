{
  "name": "hapi-api-base",
  "description": "Opinionated base code for a Hapi API",
  "version": "2.0.0",
  "main": "init.js",
  "repository": "git@github.com:iniva/hapi-api-base.git",
  "author": "Tony <tonyblast@gmail.com>",
  "license": "MIT",
  "engines": {
    "node": ">=8.10.0 <9",
    "yarn": ">=1.6.0"
  },
  "scripts": {
    "audit": "npm i --package-lock-only && npm audit",
    "clean": "rm -rf dist",
    "commit": "git-cz",
    "build": "yarn clean && babel src --out-dir dist --source-maps --copy-files",
    "build:docs": "DEBUG=docs* node docs/builder.js",
    "bump:version": "yarn version && yarn build:docs",
    "lint": "eslint src hooks",
    "hooks:message": "node hooks/index.js --action=message",
    "start": "nodemon init.js",
    "start:dist": "node dist/index.js",
    "start:debug": "NODE_ENV=development DEBUG=* yarn start",
    "start:development": "NODE_ENV=development yarn start",
    "start:production": "NODE_ENV=production yarn start:dist",
    "test": "echo \"no tests for now\""
  },
  "dependencies": {
    "@babel/runtime": "^7.0.0",
    "axios": "^0.18.0",
    "blipp": "^3.0.0",
    "boom": "^7.2.0",
    "debug": "^3.1.0",
    "dotenv": "^6.0.0",
    "good": "^8.1.1",
    "good-console": "^7.1.0",
    "good-squeeze": "^5.1.0",
    "hapi": "^17.5.4",
    "hapi-nosql-mongoose": "^1.0.0",
    "ioredis": "^4.0.0",
    "joi": "^13.6.0",
    "lodash": "^4.17.10",
    "mongoose": "^5.2.13",
    "sequelize": "^4.38.0",
    "sqlite3": "^4.0.2",
    "webpack-merge": "^4.1.4"
  },
  "devDependencies": {
    "@babel/cli": "^7.0.0",
    "@babel/core": "^7.0.0",
    "@babel/plugin-proposal-object-rest-spread": "^7.0.0",
    "@babel/plugin-transform-runtime": "^7.0.0",
    "@babel/polyfill": "^7.0.0",
    "@babel/preset-env": "^7.0.0",
    "@babel/register": "^7.0.0",
    "babel-plugin-module-resolver": "^3.1.1",
    "commitizen": "^2.10.1",
    "cz-conventional-changelog": "^2.1.0",
    "eslint": "^5.5.0",
    "eslint-import-resolver-babel-module": "^5.0.0-beta.1",
    "eslint-plugin-import": "^2.14.0",
    "husky": "^1.0.0-rc.13",
    "nodemon": "^1.18.4",
    "refs-compiler": "^1.0.0"
  },
  "config": {
    "commitizen": {
      "path": "cz-conventional-changelog"
    }
  }
}
