{
  "name": "hapi-api-base",
  "description": "Opinionated base code for a Hapi API",
  "version": "2.8.0",
  "main": "init.js",
  "repository": "git@github.com:iniva/hapi-api-base.git",
  "author": "Tony <tonyblast@gmail.com>",
  "license": "MIT",
  "engines": {
    "node": ">=8.10.0 <9 || >=10",
    "yarn": ">=1.10.0"
  },
  "scripts": {
    "clean": "rm -rf dist",
    "commit": "git-cz",
    "build": "yarn clean && babel src --out-dir dist --source-maps --copy-files",
    "build:docs": "DEBUG=docs* node docs/builder.js",
    "bump:version": "yarn version && yarn build:docs",
    "lint": "eslint src hooks",
    "hooks:message": "node hooks/index.js --action=message",
    "start": "nodemon init.js",
    "start:dist": "node dist/index.js",
    "start:debug": "NODE_ENV=development DEBUG=* yarn start",
    "start:development": "NODE_ENV=development yarn start",
    "start:production": "NODE_ENV=production yarn start:dist",
    "test": "BABEL_ENV=test NODE_ENV=test jest",
    "test:coverage": "yarn test --coverage",
    "test:coveralls": "yarn test --coverage --coverageReporters=text-lcov | coveralls"
  },
  "dependencies": {
    "@babel/runtime": "^7.2.0",
    "@slack/client": "^4.8.0",
    "blipp": "^3.0.0",
    "boom": "^7.3.0",
    "debug": "^4.1.0",
    "dotenv": "^6.2.0",
    "good": "^8.1.1",
    "good-console": "^8.0.0",
    "good-squeeze": "^5.1.0",
    "got": "^9.6.0",
    "hapi": "^18.1.0",
    "hapi-nosql-mongoose": "^1.0.1",
    "hapi-pino": "^5.4.1",
    "ioredis": "^4.3.0",
    "joi": "^14.3.0",
    "mongoose": "^5.4.15",
    "slack-webhooks-handler": "^1.0.1",
    "webpack-merge": "^4.1.5"
  },
  "devDependencies": {
    "@babel/cli": "^7.2.0",
    "@babel/core": "^7.3.3",
    "@babel/plugin-proposal-object-rest-spread": "^7.2.0",
    "@babel/plugin-transform-runtime": "^7.2.0",
    "@babel/polyfill": "^7.0.0",
    "@babel/preset-env": "^7.2.0",
    "@babel/register": "^7.0.0",
    "@types/jest": "^24.0.6",
    "babel-core": "^7.0.0-bridge.0",
    "babel-jest": "^24.1.0",
    "babel-plugin-module-resolver": "^3.1.1",
    "commitizen": "^3.0.7",
    "coveralls": "^3.0.3",
    "cz-conventional-changelog": "^2.1.0",
    "eslint": "^5.14.1",
    "eslint-config-airbnb-base": "^13.1.0",
    "eslint-import-resolver-alias": "^1.1.2",
    "eslint-import-resolver-babel-module": "^5.0.0-beta.1",
    "eslint-plugin-import": "^2.14.0",
    "husky": "^1.2.1",
    "jest": "^24.1.0",
    "nodemon": "^1.18.8",
    "refs-compiler": "^1.0.1"
  },
  "config": {
    "commitizen": {
      "path": "cz-conventional-changelog"
    }
  }
}
